<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="com.example0.checkmachine.start.ActivitionActivity">

    <!--
        在线激活
    -->
    <LinearLayout
        android:id="@+id/accredit_onRl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="在线激活"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:gravity="center">

    </TextView>
</LinearLayout>
        <LinearLayout
            android:id="@+id/accredit_onLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="49.3dp"
            android:layout_marginTop="@dimen/start_15"
            android:layout_marginRight="49.3dp"
            android:background="@drawable/bg_round_import"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/start_15"
                android:text="@string/on_technological_process"
                android:textColor="@color/attribute_activition_on"
                android:textSize="@dimen/activition_14_sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/start_15"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_hintOnOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一"
                    android:textColor="@color/attribute_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/activity_hintOnOne"
                    android:text="@string/off_technological_process_one"
                    android:textColor="@color/attribute_color"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/start_10"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="@dimen/start_15"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_hintOnTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二"
                    android:textColor="@color/attribute_color"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/activity_hintOnTwo"
                    android:text="@string/on_technological_process_two"
                    android:textColor="@color/attribute_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/hint_Tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/on_number"
            android:textColor="@color/bottom_font_color"
            android:textSize="@dimen/activition_16" />

        <include
            android:id="@+id/pc_1"
            layout="@layout/layout_edittext_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hint_Tv"
            android:layout_marginLeft="@dimen/activition_49"
            android:layout_marginTop="20dp"
            android:layout_marginRight="@dimen/activition_49" />

        <TextView
            android:id="@+id/accredit_onhintTv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="49.3dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="49.3dp"
            android:textColor="@color/activition_red"
            android:textSize="@dimen/bottom_font" />

        <Button
            android:id="@+id/accredit_onBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/accredit_onhintTv"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="@dimen/activition_14"
            android:layout_marginRight="50dp"
            android:background="@drawable/bg_gradient"
            android:enabled="false"
            android:padding="13dp"
            android:text="@string/accredit_on"
            android:textColor="@color/bottom_font_color"
            android:textSize="@dimen/activition_18_sp" />

        <TextView
            android:id="@+id/accredit_onhiteTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="@string/off_problem"
            android:textColor="#999999" />


    </LinearLayout>

</LinearLayout>